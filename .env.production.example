# .env.production
# =================================================
# Copie este arquivo para .env na VPS e preencha
# os valores antes de rodar docker compose
# =================================================

APP_NAME="Eva Tecnologia"
APP_ENV=production
APP_DEBUG=false
APP_KEY=                          # Gerar com: php artisan key:generate --show
APP_PORT=81
APP_URL=http://SEU_DOMINIO_OU_IP:81

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=en

# Database
DB_CONNECTION=pgsql
DB_HOST=pgsql
DB_PORT=5432
DB_DATABASE=bugtracker_eva
DB_USERNAME=bugtracker
DB_PASSWORD=                      # Defina uma senha forte

# Session / Queue / Cache
SESSION_DRIVER=database
QUEUE_CONNECTION=database
CACHE_STORE=database
FILESYSTEM_DISK=local

# Logging
LOG_CHANNEL=stderr

# Mail (configure com seu SMTP)
MAIL_MAILER=log
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@evatecnologia.com.br
MAIL_FROM_NAME="Eva Tecnologia"

# Admin Credentials (para o ProductionSeeder)
EMAIL_ADMIN=
PASSWORD_ADMIN=
